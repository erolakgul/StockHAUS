<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".controller.fragment.material.detail.MaterialDetailFragment">

    <TableLayout
        android:id="@+id/lnrTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|bottom">


            <Button
                android:id="@+id/btnBack"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/close" />

            <Button
                android:id="@+id/btnDeleteMaterialText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Kod"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text__1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:textAlignment="center"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Açıklama"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:textAlignment="center"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Parti"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__5"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_batchnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_6"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Ö.Stok"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__6"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_spec_stock"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:dropDownWidth="100dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:popupBackground="#ffffff"
                android:popupElevation="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Seri No"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__8"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/txt_serno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_18"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Miktar"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__18"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/txt_quan"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint=""
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_28"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Birim"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__28"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_units"
                style="@style/AppTheme"
                android:layout_width="140dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:dropDownWidth="100dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:popupBackground="#ffffff"
                android:popupElevation="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_10"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Depo"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__10"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_ware"
                style="@style/AppTheme"
                android:layout_width="120dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:dropDownWidth="100dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:popupBackground="#ffffff"
                android:popupElevation="3dp"/>

            <TextView
                android:id="@+id/text_12"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Stok Yeri"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text__12"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_stockplace"
                style="@style/AppTheme"
                android:layout_width="140dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:dropDownWidth="100dp"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:popupBackground="#ffffff"
                android:popupElevation="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="end|bottom">

            <Button
                android:id="@+id/btnDeleteMaterial"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:text="Sil"
                android:textColor="#B94949"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddMaterial"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:text="Kaydet"
                android:textColor="#B94949"
                android:textSize="19sp"
                android:textStyle="bold" />


        </LinearLayout>


    </TableLayout>

</FrameLayout>